<div class="ui bottom attached table segment df ac sb">
		<div class="df ac ml-4">
			{{if .result.Language}}
					<i class="color-icon mr-3" style="background-color: {{.result.Color}}"></i>{{.result.Language}}
			{{end}}
		</div>
		<div class="mr-4">
			{{if not .result.UpdatedUnix.IsZero}}
					<span class="ui grey text">{{.root.i18n.Tr "explore.code_last_indexed_at" (TimeSinceUnix .result.UpdatedUnix .root.i18n) | Safe}}</span>
			{{end}}
		</div>
</div>
